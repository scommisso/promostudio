@using Newtonsoft.Json
@using PromoStudio.Resources
@model PromoStudio.Web.ViewModels.AudioViewModel
@{
    ViewBag.Title = string.Format("{0} - {1}", Strings.BuildStep__Build, Strings.BuildStep__Audio);
    Layout = "~/Views/Build/_BuildLayout.cshtml";
}
@section scripts {
    <script>
        require(["viewModels/scaffold"], function () {
            require(["viewModels/audioViewModel", "jqueryui"], function(audio, $) {
                $(function() {
                    var vm = new audio(@Html.Raw(JsonConvert.SerializeObject(Model)));
                    vm.Bind("#main form", ".progress-bar");
                });
            });
        });
    </script>
}

<form action="#">
	<!-- accordion -->
	<ul class="accordion">
		<li data-bind="css: { 'active': MusicSection().StartOpen, 'done': MusicSection().IsCompleted, 'not-done': !MusicSection().IsCompleted() }">
			<!-- opener -->
			<a class="opener" href="#">
				<div class="holder">
					<span class="num"><em>1</em></span>
					<span class="title">
						<strong>@Strings.BuildStep__Music</strong>
						<span>@Strings.BuildStep__Choose_your_background_music</span>
					</span>
				</div>
			</a>
			<!-- slide -->
			<div class="slide">
				<!-- tabset -->
				<nav  class="tabset">
					<ul>
						<li><a href="#tab1">Rock</a></li>
						<li><a href="#tab2">HipHop</a></li>
					</ul>
				</nav>
				<!-- tab-content -->
				<div class="tab-content">
					<!-- tab1 -->
					<section id="tab1">
						<!-- list-of-audio -->
						<ul class="list-of-audio" data-bind="foreach: MusicSection().AvailableMusic">							<li>
								<span class="image">
									<a href="#" class="btn-play">@Strings.play</a>
									<img width="79" height="72" src="@Url.Content("~/Content/images/img03.jpg")" data-bind="attr: { 'alt': $data.Description }">
								</span>
								<label data-bind="attr: { 'for': 'check' + $data.pk_StockAudioId() }">
									<span class="info">
										<strong data-bind="text: $data.Name"></strong>
                                        <!-- ko text: $data.Description --><!-- /ko -->
									</span>
									<input type="checkbox" data-bind="checked: $root.MusicSection().IsSelected($data), attr: { 'id': 'check' + $data.pk_StockAudioId() }">
								</label>
                                <div class="audio-player" data-bind="jplayer: { 'media': { 'mp3': '/Resources/StockAudio?stockAudioId=' + $data.pk_StockAudioId() }, 'title': $data.Name }"> 
                                </div>							</li>
						</ul>
					</section>
					<!-- tab2 -->
					<section id="tab2">
                        Hip Hop here
					</section>
				</div>
				<div class="btn-holder">
					<input type="submit" value="Save">
				</div>
			</div>
		</li>
		<li data-bind="css: { 'active': ActorSection().StartOpen, 'done': ActorSection().IsCompleted, 'not-done': !ActorSection().IsCompleted() }">
			<!-- opener -->
			<a class="opener" href="#">
				<div class="holder">
					<span class="num"><em>2</em></span>
					<span class="title">
						<strong>@Strings.BuildStep__Voice</strong>
						<span>@Strings.BuildStep__Choose_your_voiceover_talent</span>
					</span>
				</div>
			</a>
			<!-- slide -->
			<div class="slide">
				<!-- voice-block -->
				<div class="voice-block">
					<div class="col">
						<h3>Male</h3>
						<!-- list-of-audio -->
						<ul class="list-of-audio" data-bind="foreach: ActorSection().AvailableActors">
							<li>
								<div class="image">
									<a href="#" class="btn-play2">@Strings.play</a>
									<img src="#" width="79" height="72" data-bind="attr: { 'alt': $data.FullName, 'src': $data.PhotoUrl }" />
								</div>
								<label data-bind="attr: { 'for': 'check' + $data.pk_VoiceActorId() }">
									<span class="info">
										<strong data-bind="text: $data.FullName"></strong>
                                        <!-- ko text: $data.Description --><!-- /ko -->
									</span>
									<input type="checkbox" data-bind="attr: { 'id': 'check' + $data.pk_VoiceActorId() }">
								</label>
                                <div class="audio-player" data-bind="jplayer: { media: { mp3: '/Resources/ActorSample?voiceActorId=' + $data.pk_VoiceActorId() }, title: $data.FullName }">
                                </div>
							</li>
						</ul>
					</div>
					<div class="col">
						<h3>Female</h3>
					</div>
				</div>
				<div class="btn-holder">
					<input type="submit" value="Save">
				</div>
			</div>
		</li>
        <!-- /ko -->
	</ul>
</form>
