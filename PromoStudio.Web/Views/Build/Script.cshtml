@using Newtonsoft.Json
@using PromoStudio.Resources
@model PromoStudio.Web.ViewModels.ScriptViewModel
@{
    ViewBag.Title = string.Format("{0} - {1}", Strings.BuildStep__Build, Strings.BuildStep__Script);
    Layout = "~/Views/Build/_BuildLayout.cshtml";
}
@section scripts {
    <script>
        require(["viewModels/scaffold"], function () {
            require(["viewModels/audioScriptViewModel", "jqueryui"], function(audioScript, $) {
                $(function() {
                    var vm = new audioScript(@Html.Raw(JsonConvert.SerializeObject(Model)));
                    vm.Bind("#main form", ".progress-bar");
                });
            });
        });
    </script>
}

<form action="#">
    @* accordion *@
    <ul class="accordion">
        <li class="active">
            <!-- opener -->
            <a class="opener" href="#">
                <div class="holder">
                    <span class="num"><em>1</em></span>
                    <span class="title">
                        <strong>Template Script</strong>
                        <span>Choose a template script and add your information</span>
                    </span>
                </div>
            </a>
            @* slide *@
            <div class="slide">
                <!-- tabset -->
                <nav class="tabset" data-bind="foreach: ScriptSections">
                    <ul data-bind="foreach: Scripts">
                        <li><a href="#" data-bind="attr: { 'href': ClientAnchor }, text: Name, click: function (s) { $root.SelectScript(s); }"></a></li>
                    </ul>
                </nav>
                @* tab-content *@
                <div class="tab-content" data-bind="foreach: Scripts">
                    <section data-bind="attr: { 'id': ClientId }">
                        <div class="box">
                            <article class="post">
                                <h1 data-bind="text: Name">Script 1</h1>
                                <div data-bind="html: ScriptHtml"></div>
                            </article>
                        </div>
                    </section>
                </div>
            </div>
        </li>
